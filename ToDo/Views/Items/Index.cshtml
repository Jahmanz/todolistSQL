@{
  Layout="_Layout";
}


<h2>Items:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var item in Model)
    {
      <li><a href='/items/@item.GetId()'>@item.GetDescription()</a>
      <a href="/items/@item.GetId()/update">Edit</a> ||
      <a method="post" href="/items/@item.GetId()/delete">Delete</a></li>
     }
   </ul>
 }
<br>
<h4><a href="/items/new">Add new Item</a></h4>
<h4><a href="/">Return Home</a></h4>
