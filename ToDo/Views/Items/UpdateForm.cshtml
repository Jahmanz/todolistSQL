@{
  Layout="_Layout";
}
    <h2>Edit Item: @Model.GetDescription()</h2>
    <form action="/categories/details" method="post">
        <label for="name">Name:</label>
        <input type="text" name="newname" value="@Model.GetDescription()">
        <input name="category-id" type="hidden" value="@Model">
        <button type="submit">Edit</button>
    </form>
    <a href="/items/@Model.GetId()/deleteitem"><button type="submit" name="button">Delete Item</button></a>
    <h4><a href="/">Return home</a></h4>
