@{
  Layout="_Layout";
}
    <h2>Edit Category: @Model.GetName()</h2>
    <form action="/categories/@Model.GetId()/update" method="post">
        <label for="name">Name:</label>
        <input type="text" name="newname" value="@Model.GetName()">
        <input name="category-id" type="hidden" value="@Model">
        <button type="submit">Edit</button>
    </form>
    <h4><a href="/categories">Return home</a></h4>
